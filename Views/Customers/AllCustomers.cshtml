@model road_to_asp.ViewModels.CustomersViewModel
@{
    ViewData["Title"] = "AllCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Customers</h1>
<style>
    .block {display:block}

    </style>

@foreach(var customer in Model.Customers)
{
    <a class="block" asp-action="Details" asp-controller="Customers" asp-route-id= "@customer.CustomerId">@customer.Name</a>
}