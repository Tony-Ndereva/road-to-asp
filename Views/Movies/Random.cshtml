@model road_to_asp.ViewModels.RandomMovieViewModel
@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

    var className = Model.Customers.Count > 0 ? "popular" : null;
}

@foreach(var movie in Model.Movie)
{
    <h1 class="@className">@movie.Name.</h1>
}


@if(Model.Customers.Count == 0)
{
    <text>No one has rented this movie.</text>
}
else
{
    <ul>

        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }

    </ul>
}



