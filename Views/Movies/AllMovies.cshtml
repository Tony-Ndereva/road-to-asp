@model IEnumerable<road_to_asp.Models.Movie>
@{
    ViewData["Title"] = "AllMovies";
}

<h1>All Movies</h1>

<table class="table table-bordered table-hover">

    <thead>

        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>

    </thead>

    <tbody>

        @foreach (var movie in Model)
        {
            <tr>
                <td class="block">
                    <a style="text-decoration:none" asp-action="Details" asp-controller="Movies" asp-route-id="@movie.MovieId">@movie.Name</a>
                </td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>

